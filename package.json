{
  "name": "changelogger",
  "displayName": "Change Logger",
  "description": "Automatically generate and update CHANGELOG.md from git commit history",
  "version": "0.0.1",
  "publisher": "DevShedLabs",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/topdown/changelogger"
  },
 "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "changelogger.createChangelog",
        "title": "Create Changelog Here",
        "category": "Change Logger"
      },
      {
        "command": "changelogger.updateChangelog",
        "title": "Update Changelog",
        "category": "Change Logger"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "changelogger.createChangelog",
          "when": "explorerResourceIsFolder",
          "group": "changelogger"
        },
        {
          "command": "changelogger.updateChangelog",
          "when": "explorerResourceIsFolder",
          "group": "changelogger"
        }
      ],
      "commandPalette": [
        {
          "command": "changelogger.createChangelog",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "changelogger.updateChangelog",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "build": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "simple-git": "^3.19.1"
  }
}
